
@{ 
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@Page.Title</title>
    <script src="~/Scripts/jquery-3.7.1.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>    
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <style>
        #customerInfo {
            border: 5px black solid;
            border-radius: 10px;
            background-color: #b9bced;
            transition: height 2s;
            width: 300px;
            height: 5px;
            box-shadow: 10px 10px 5px #8499bf;
        }

        #customerInfoText {
            opacity: 0%;
        }

        #customerInfo:hover {
            height: 150px;
        }

        #customerInfo:hover #customerInfoText {
            opacity: 100%;
            transition: opacity 1s;
            transition-delay: 1s;
        }
        

        body {
            background-color: #92a8d1;
        }

        h2 {
            text-shadow: 2px 2px 1px #8499bf;
        }

        p {
            text-shadow: 2px 2px 1px #8499bf;
        }
    </style>
</head>

<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            @Html.ActionLink("Customers", "Index", "Customer", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("Home", "Index", "Customer", new { area = "" }, new { @class = "nav-link" })</li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container container-body">
        @RenderPage("_Header.cshtml") 
        @RenderBody()
    </div>
</body>
</html>
